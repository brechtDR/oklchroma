---
import Layout from '../layouts/Layout.astro';
import '../styles/main.css';
---

<Layout title="About Oklchroma">
    <nav>
        <ul>
            <li><a href="/">Editor</a></li>
            <li><a href="/about" class="active">About</a></li>
        </ul>
    </nav>
    <main class="about-page">
        <div class="container">
            <h1 class="title">About</h1>


            <footer class="about-footer">
                <p>Â© 2025 Oklchroma. All rights reserved.</p>
                <p>Built with <a href="https://astro.build" target="_blank" rel="noopener noreferrer">Astro</a> and <a href="https://reactjs.org" target="_blank" rel="noopener noreferrer">React</a>.</p>
            </footer>
        </div>
    </main>
</Layout>

<style>
    .about-page {
        padding: 2rem 0;
        color: var(--text-primary);
    }

    .about-section {
        margin-bottom: 3rem;
    }

    .about-section h2 {
        color: var(--accent-color);
        margin-bottom: 1rem;
        font-size: 1.75rem;
    }

    .about-section p {
        margin-bottom: 1rem;
        line-height: 1.6;
    }

    .feature-list {
        padding-left: 1.5rem;
        margin-bottom: 1rem;
    }

    .feature-list li {
        margin-bottom: 0.75rem;
        line-height: 1.5;
    }

    .code-block {
        background-color: var(--bg-tertiary);
        padding: 1.5rem;
        border-radius: 0.5rem;
        overflow-x: auto;
        margin: 1.5rem 0;
        font-family: ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas, 'Liberation Mono', 'Courier New', monospace;
        white-space: pre;
        color: var(--text-primary);
        border: 1px solid var(--border-color);
    }

    .about-footer {
        margin-top: 4rem;
        padding-top: 2rem;
        border-top: 1px solid var(--border-color);
        font-size: 0.875rem;
        color: var(--text-secondary);
    }

    .about-footer a {
        color: var(--accent-color);
        text-decoration: none;
    }

    .about-footer a:hover {
        text-decoration: underline;
    }
</style>