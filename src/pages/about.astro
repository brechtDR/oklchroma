---
import Layout from '../layouts/Layout.astro';

// About page for the Color Pattern Generator
---

<Layout title="About | oklchroma">
    <main>
        <h1>About the Color Pattern Generator</h1>
        <p>This is a tool that allows you to generate beautiful OKLCH color patterns.</p>

        <!-- Add more content about your project here -->

        <div class="actions">
            <a href="/">Back to Generator</a>
        </div>
    </main>
</Layout>

<style>
    main {
        margin: 0 auto;
        padding: 1.5rem;
        max-width: 800px;
    }

    h1 {
        font-size: 2.5rem;
        margin-bottom: 1rem;
    }

    .actions {
        margin-top: 2rem;
    }

    a {
        display: inline-block;
        padding: 0.5rem 1rem;
        background-color: #4c1d95;
        color: white;
        text-decoration: none;
        border-radius: 4px;
    }

    a:hover {
        background-color: #6d28d9;
    }
</style>